int main()
{
    char c, tmp;
    int char_count;
    int srv_fd;
    FILE* fp;
    std::string pid;
    std::filesystem::path path, root, tmp_filename;
    std::fstream cli;
    struct sigaction sa{};

    // TODO: err handling
    // TODO: writable only by group
    std::filesystem::create_directory(PATH_ROOT);

    sfifo_mkfifo(PATH_ROOT, "srv");
    srv_fd = sfifo_open(PATH_ROOT, "srv");
    if (srv_fd == -1) {
        perror("open");
        exit(1);
    }
     fp = fdopen(srv_fd, "r");

    c = 0;
    while (1) {
        // TODO: replace with poll
        while((c = getc(fp)) == -1){
            usleep(10000);
        }
        do {
            pid.append(1, c);
        } while ((c = getc(fp)) != '\0');

        char_count = 0;
        while ((c = getc(fp)) != '\0')
                char_count++;
        cli = sfifo_fstream(PATH_ROOT, pid);
        cli << (char_count - 1) << std::endl;

        pid.clear();
    }
    close(srv_fd);
}
#include "common.h"

#include <string>
